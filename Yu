local function CreateInfoBox(iconText, title, description, accentColor)
    local Box = Instance.new("Frame", InfoScroll)
    Box.Size = UDim2.new(1,-8,0,75)
    Box.BackgroundColor3 = Color3.fromRGB(25,30,40)
    Box.BorderSizePixel = 0
    
    Instance.new("UICorner", Box).CornerRadius = UDim.new(0,4)
    
    -- ICON/SYMBOL
    local Icon = Instance.new("TextLabel", Box)
    Icon.Size = UDim2.fromOffset(20,20)
    Icon.Position = UDim2.new(0,10,0,10)
    Icon.BackgroundTransparency = 1
    Icon.Text = iconText
    Icon.Font = Enum.Font.GothamBold
    Icon.TextSize = 14
    Icon.TextColor3 = accentColor
    
    -- TITLE
    local BoxTitle = Instance.new("TextLabel", Box)
    BoxTitle.Size = UDim2.new(1,-45,0,20)
    BoxTitle.Position = UDim2.new(0,35,0,10)
    BoxTitle.BackgroundTransparency = 1
    BoxTitle.Text = title
    BoxTitle.Font = Enum.Font.GothamBold
    BoxTitle.TextSize = 13
    BoxTitle.TextColor3 = accentColor
    BoxTitle.TextXAlignment = Enum.TextXAlignmen.LEFT
    
    -- DESCRIPTION
    local BoxDesc = Instance.new("TextLabel", Box)
    BoxDesc.Size = UDim2.new(1,-16,0,40)
    BoxDesc.Position = UDim2.new(0,10,0,32)
    BoxDesc.BackgroundTransparency = 1
    BoxDesc.Text = description
    BoxDesc.Font = Enum.Font.Gotham
    BoxDesc.TextSize = 10
    BoxDesc.TextColor3 = Color3.fromRGB(130,140,160)
    BoxDesc.TextXAlignment = Enum.TextXAlignment.Left
    BoxDesc.TextYAlignment = Enum.TextYAlignment.Top
    BoxDesc.TextWrapped = true
    
    return Box
end

