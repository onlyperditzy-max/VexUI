local menuButtons = {}

local function CreateMenuItem(data)
    local Button = Instance.new("TextButton", MenuList)
    Button.Size = UDim2.new(1,0,0,32)
    Button.BackgroundColor3 = Color3.fromRGB(20,24,32)
    Button.BorderSizePixel = 0
    Button.Text = ""
    Button.AutoButtonColor = false
    
    Instance.new("UICorner", Button).CornerRadius = UDim.new(0,4)
    
    -- ICON IMAGE
    local IconImage = Instance.new("ImageLabel", Button)
    IconImage.Size = UDim2.fromOffset(16,16)
    IconImage.Position = UDim2.new(0,10,0.5,-8)
    IconImage.BackgroundTransparency = 1
    IconImage.Image = data.icon
    IconImage.ImageColor3 = Color3.fromRGB(120,130,150)
    IconImage.ScaleType = Enum.ScaleType.Fit
    
    -- TEXT
    local Label = Instance.new("TextLabel", Button)
    Label.Size = UDim2.new(1,-38,1,0)
    Label.Position = UDim2.new(0,32,0,0)
    Label.BackgroundTransparency = 1
    Label.Text = "| " .. data.name
    Label.Font = Enum.Font.Gotham
    Label.TextSize = 12
    Label.TextColor3 = Color3.fromRGB(120,130,150)
    Label.TextXAlignment = Enum.TextXAlignment.Left
    
    -- SELECTION INDICATOR (LEFT SIDE)
    local Indicator = Instance.new("Frame", Button)
    Indicator.Size = UDim2.new(0,2,0.6,0)
    Indicator.Position = UDim2.new(0,0,0.2,0)
    Indicator.BackgroundColor3 = Color3.fromRGB(90,160,230)
    Indicator.BorderSizePixel = 0
    Indicator.Visible = false
    
    return Button, Indicator, IconImage, Label
end

for _, item in ipairs(menuItems) do
    local btn, indicator, icon, label = CreateMenuItem(item)
    menuButtons[item.name] = {button = btn, indicator = indicator, icon = icon, label = label}
    end
    
