--==================================================
-- MENU SELECTION
--==================================================
local function SelectPage(pageName)
    currentPage = pageName
    
    for name, data in pairs(menuButtons) do
        if name == pageName then
            data.indicator.Visible = true
            data.button.BackgroundColor3 = Color3.fromRGB(30,36,48)
            data.icon.ImageColor3 = Color3.fromRGB(90,160,230)
            data.label.TextColor3 = Color3.fromRGB(200,210,230)
        else
            data.indicator.Visible = false
            data.button.BackgroundColor3 = Color3.fromRGB(20,24,32)
            data.icon.ImageColor3 = Color3.fromRGB(120,130,150)
            data.label.TextColor3 = Color3.fromRGB(120,130,150)
        end
    end
    
    InfoPage.Visible = (pageName == "Info")
end

for name, data in pairs(menuButtons) do
    data.button.MouseButton1Click:Connect(function()
        SelectPage(name)
    end)
    
    -- HOVER EFFECT
    data.button.MouseEnter:Connect(function()
        if currentPage ~= name then
            data.button.BackgroundColor3 = Color3.fromRGB(25,30,40)
        end
    end)
    
    data.button.MouseLeave:Connect(function()
        if currentPage ~= name then
            data.button.BackgroundColor3 = Color3.fromRGB(20,24,32)
        end
    end)
end

SelectPage("Info")

--==================================================
-- DRAG
--==================================================
do
    local dragging, dragStart, startPos
    
    Header.InputBegan:Connect(function(i)
        if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = i.Position
            startPos = MainFrame.Position
        end
    end)
    
    Header.InputEnded:Connect(function(i)
        if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then
            dragging = false
        end
    end)
    
    UIS.InputChanged:Connect(function(i)
        if dragging and (i.UserInputType == Enum.UserInputType.MouseMovement or i.UserInputType == Enum.UserInputType.Touch) then
            local delta = i.Position - dragStart
            MainFrame.Position = startPos + UDim2.fromOffset(delta.X, delta.Y)
        end
    end)
end

do
    local dragging, dragStart, startPos


        if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = i.Position
            startPos = LogoButton.Position
        end
    end)
    
    LogoButton.InputEnded:Connect(function(i)
        if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then
            dragging = false
        end
    end)
    
    UIS.InputChanged:Connect(function(i)
        if dragging and (i.UserInputType == Enum.UserInputType.MouseMovement or i.UserInputType == Enum.UserInputType.Touch) then
            local delta = i.Position - dragStart
            LogoButton.Position = startPos + UDim2.fromOffset(delta.X, delta.Y)
        end
    end)
end

--==================================================
-- LOGO ANIMATION
--==================================================
local function ShowLogoAnimated()
    LogoButton.Visible = true
    LogoButton.Size = UDim2.fromOffset(35,35)
    
    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
    TweenService:Create(LogoButton, tweenInfo, {Size = UDim2.fromOffset(70,70)}):Play()
end

--==================================================
-- TOGGLE
--==================================================
local function OpenUI()
    MainFrame.Visible = true
    LogoButton.Visible = false
end

local function CloseUI()
    MainFrame.Visible = false
    ShowLogoAnimated()
end

CloseBtn.MouseButton1Click:Connect(CloseUI)
MinimizeBtn.MouseButton1Click:Connect(CloseUI)
LogoButton.MouseButton1Click:Connect(OpenUI)

OpenUI()

print("âœ… CHLOE X UI LOADED (EXACT REPLICA)")
